

    <div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg
    shadow-lg text-gray-800 rounded-3xl">

        <div class="d-flex justify-content-center">
        <!--<img src="https://cdn.icon-icons.com/icons2/2483/PNG/512/user_icon_149851.png" alt="" style="height: 7rem;">-->
        </div>
    
        <h1 class="text-2xl font-bold text-center">Editar Producto</h1>

        {{#each pers}}

        <form action="/productos/editprod/{{id_producto}}" method="post" class="mt-4"> 
          <!--Se valida toda la informacion previamente creada y guardada en la base de datos se pone en cuadros de texto para poder 
            editar la informacion tiene que estar contestados los campos con la informacion del producto-->
            <label for="">Nombre del Articulo</label>
            <input type="text" name="name" placeholder="Nombre del Articulo"
            class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
            bg-gray-300 focus:bg-white rounded-3xl" value="{{name}}" required>

            <label for="">Tipo de Articulo</label>
            <!--<input type="number" name="tipo_rt" placeholder="Tipo de Articulo"
            class="border border-gray-200 w-full  text-lg placeholder-gray-500 p-2 my-2 
            bg-gray-300 focus:bg-white rounded-3xl" min="1" max="3" maxlength="1" 
            oninput="if(this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);" value="{{tipo_art}}" required>-->
             <select name="Tipo de Articulo" id="" class="border border-gray-200  text-lg placeholder-gray-500 p-2 my-2 
            bg-gray-300 focus:bg-white rounded-3xl w-full">
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
            </select>
           
           
           <label for="">Precio</label>
            <input type="number" name="precio" placeholder="Precio" 
            class="border border-gray-200  text-lg placeholder-gray-500 p-2 my-2 
            bg-gray-300 focus:bg-white rounded-3xl w-full"   width="50px" value="{{precio}}" required>
            <label for="">Costo</label>
            <input type="number" name="costo" placeholder="Costo" width="50px" 
            class="border border-gray-200  text-lg placeholder-gray-500 p-2 my-2 
            bg-gray-300 focus:bg-white rounded-3xl w-full" value="{{costo}}" required>
            <label for="">Unidad</label>
            <input type="number" name="unidad" placeholder="Unidad" width="50px"
            class="border border-gray-200  text-lg placeholder-gray-500 p-2 my-2 
            bg-gray-300 focus:bg-white rounded-3xl w-full" value="{{unidad}}" required>
            <!--se guarda la informacion previamente editada del producto -->
            <!--<select name="" id="">
              <option value="">Puto</option>
              <option value="">Puto</option>
              <option value="">Puto</option>
            </select>-->
            <button type="submit" class="rounded-md bg-yellow-800 w-full text-lg text-white 
            font-semibold p-2 my-3 hover:bg-yellow-900 focus:bg-yellow-900">Guardar</button>
        </form>

        {{/each}}
    
    </div>
